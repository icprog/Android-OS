<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <TextView
        android:id="@+id/textView_title"
        android:layout_width="0dip"
        android:layout_weight="9"
        android:layout_height="wrap_content"
        android:textColor="@color/fingerprint_guide_text_color"
        android:textSize="@dimen/fingerprint_enroll_text_size"
        android:singleLine="true"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:paddingRight="5dp"
        android:paddingLeft="16dp"/>
    <TextView
        android:id="@+id/textView_tip"
        android:layout_width="0dip"
        android:layout_weight="3.5"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/fingerprint_setting_hint"
        android:singleLine="true"
        android:paddingTop="20dp"
        android:paddingBottom="12dp"/>
    <ImageView
        android:id="@+id/textView_next"
        android:layout_width="0dip"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fingerprint_next"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:paddingRight="15dp"
        android:paddingLeft="5dp"/>
</LinearLayout>
